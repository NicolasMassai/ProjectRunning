{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<h1>Montre</h1>


{% for produit in produits %}
        <ul>
            <li>Nom : {{produit.nom}}</li>
            <li>Categorie : {{produit.categorie}}</li>
            <li>Description : {{produit.description}}</li>
            <li>Prix : {{produit.prix}} €</li>
            <li>Taille : {{produit.taille}}</li>
            <li>Couleur : {{produit.couleur}}</li>
            <br>
        </ul>
        <ul>
            <form action="{{ path('app_produit_id', {"produit": produit.id}) }}" method="post">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Afficher Détails</button>
            </form>
            <form action="{{ path('app_produit_buy', {"produit": produit.id}) }}" method="post">
                <button type="submit" class="btn btn-outline-primary btn-sm">Acheter</button>
            </form>
            <a href="{{ path('app_panier_add', {id: produit.id}) }}" class="btn btn-success">Ajouter au panier</a>
            <br>
        </ul>

{% endfor %}

</div>
{% endblock %}
