{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Résultats de la requête SQL</h1>

    <table>
        <thead>
            <tr>
                <th>Commande</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for resultat in commandes %}
                <tr>
                    <td>{{ resultat.id }}</td>
                    <td>{{ resultat.nom }}</td>
                    <td>{{ resultat.quantite }}</td>
                    <td>{{ resultat.prix }}</td>
                    <td>{{ resultat.total }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
